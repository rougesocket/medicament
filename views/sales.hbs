<!DOCTYPE html>
<html lang="en">
<head>
    <!-- CSS only -->
    {{>head}}
<link rel="stylesheet" href="/css/dash.css">
    <title>Dashboard::Sales</title>


</head>
<body >

        
        {{>dashnav}}
    <main class="mt-3 px-3">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12 fw-bold fs-3">Sales</div>
        </div>
        
        <div class="row mt-3">

            <div class="card">
                <div class="card-header d-flex justify-content-end">
                    <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    <i class="fas fa-cart-plus m-1"></i>New Sale
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">New Sale</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          
            <form action="/sold" method="POST">
                <div class="mb-3">
                    <label for="pname" class="form-label text-capitalize">enter product name</label>
                    <input type="text" name="pname" id="pname" class="form-control" placeholder="Enter Name of product" required>
                </div>
                <div class="mb-3">
                    <label for="qty" class="form-label text-capitalize">Quantity</label>
                    <input type="text" name="quantity" id="qty" class="form-control" placeholder="Quantity" required>
                </div>
            
        </div>
        <div class="modal-footer d-block">
          <button type="submit" class="btn btn-success" data-bs-dismiss="modal">Submit</button>
         </div>
         </form>
      </div>
    </div>
  </div>
  
                </div>
                {{#if flag}}
                <div class="alert alert-danger">
                  Error: Product Not Found
                </div>
                {{/if}}
                <div class="card-body">
                    <table class="table table-bordered text-center">
                        <thead>
                          <tr>
                            <th scope="col">#</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Qty</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Date</th>
                          </tr>
                        </thead>
                        <tbody>
                          {{#each data}}
                          <tr>
                            <th scope="row">
                              {{@index}}
                            </th>
                            <td class="text-capitalize">{{pname}}</td>
                            <td class="text-capitalize">{{quantity}}</td>
                            <td class="text-capitalize">{{amount}}</td>
                            <td class="text-capitalize">{{date}}</td>
                          </tr>
                          {{/each}}
                        </tbody>
                      </table>
                </div>
            </div>
        </div>
    </main>
      
    <!-- JavaScript Bundle with Popper -->
        {{>somescript}}
</body>
</html>