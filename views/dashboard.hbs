<!DOCTYPE html>
<html lang="en">
<head>
    <!-- CSS only -->
    {{>head}}
<link rel="stylesheet" href="../css/dash.css">
    <title>Dashboard</title>


</head>
<body >

        {{>dashnav}}
    
{{stat.email}}

    <main class="mt-3 px-3">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12 fw-bold fs-3">Statistic</div>
        </div>
        {{email}}
        <div class="row mt-3">

          <div class="col-md-4">
            <div class="card text-dark bg-light" style="max-width: 18rem;">
              <div class="card-header text-center fw-bold fs-5">Total Sale Today</div>
              <div class="card-body">
                <h1 class="card-text text-center">{{total}}</h1>
              </div>
            </div>
          </div>

          <div class="col-md-4">
            <div class="card text-dark bg-light" style="max-width: 18rem;">
              <div class="card-header text-center fw-bold fs-5">Total Transaction Today</div>
              <div class="card-body">
                <h1 class="card-text text-center">{{transaction}}</h1>
              </div>
            </div>
          </div>

          <div class="col-md-4">
            <div class="card text-dark bg-light" style="max-width: 18rem;">
              <div class="card-header text-center fw-bold fs-5">Total Expiring Medicine</div>
              <div class="card-body">
                <h1 class="card-text text-center">{{expcount}}</h1>
              </div>
            </div>
          </div>
        </div>
      </div>
      
            <div class="container my-5">
        <div class="card">
          <div class="card-header">
            <h1 class="fs-4 text-center fw-bold">Expiring Medicine list</h1>
          </div>
          <div class="card-body">
            <table class="table table-bordered text-center">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Product Name</th>
                  <th scope="col">Type</th>
                </tr>
              </thead>
              <tbody>
                {{#each medlst}}
                  <tr>
                    <th scope="row">
                      {{@index}}
                    </th>
                    <td class="text-capitalize">{{pname}}</td>
                    <td class="text-capitalize">{{ptype}}</td>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </main>
      
    <!-- JavaScript Bundle with Popper -->
  {{>somescript}}
</body>
</html>