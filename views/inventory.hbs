<!DOCTYPE html>
<html lang="en">
<head>
    <!-- CSS only -->
    {{>head}}
    <link rel="stylesheet" href="../css/dash.css">
    <title>Dashboard::Inventory</title>


</head>
<body >

        {{>dashnav}}

    <main class="mt-3 px-3">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12 fw-bold fs-3">Inventory Manager</div>
        </div>
        
        <div class="row mt-3">

            <div class="card">
                <div class="card-body">
                    <table class="table table-bordered text-center">
                        <thead>
                          <tr>
                            <th scope="col">#</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Stock Available</th>
                            <th scope="col">Expiry Date</th>
                          </tr>
                        </thead>
                        <tbody>
                          {{#each data}}
                          <tr>
                            <th scope="row">
                              {{@index}}
                            </th>
                            <td class="text-capitalize">{{pname}}</td>
                            <td class="text-capitalize">{{quantity}}</td>
                            <td class="text-capitalize">{{expdate}}</td>
                          </tr>
                          {{/each}}
                        </tbody>
                      </table>
                </div>
            </div>
        </div>
    </main>
      
    <!-- JavaScript Bundle with Popper -->
    {{>somescript}}
</body>
</html>